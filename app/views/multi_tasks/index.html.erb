<p id="notice"><%= notice %></p>

<h1>Tarefas</h1>

<table>
  <thead>
    <tr>
      <th>Finalizado?</th>
      <th>Descrição</th>
      <th>Data de inicio</th>
      <th>Data de fim</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= form_for(task) do |f| %>
          <%= f.check_box :finished %>
        <% end %></td>
        <td><%= task.description %></td>
        <td><%= task.formatted_start_date %></td>
        <td><%= task.formatted_end_date %></td>
        <td><%= link_to 'Mostrar tarefa', task %></td>
        <td><%= link_to 'Editar tarefa', edit_multi_task_path(task) %></td>
        <td><%= link_to 'Deletar tarefa', task, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'Nova tarefa', new_multi_task_path %>
