<p id="notice"><%= notice %></p>
<div class="container">

  <div id="testing"></div>

  <div class="card">
    <div class="card-body">
      <h1 class="card-title" >Tarefas</h1>
      <div class="col-2">
        <%= link_to 'Nova tarefa', new_multi_task_path, class: "btn btn-primary active" %>
      </div>
      </br>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Finalizado?</th>
            <th>Descrição</th>
            <th>Data de inicio</th>
            <th>Data de fim</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @multitasks.each do |multitask| %>
            <tr>
              <td><%= form_for(multitask) do |f| %>
                <%= f.check_box :finished %>
              <% end %></td>
              <td><%= multitask.description %></td>
              <td><%= multitask.formatted_start_date %></td>
              <td><%= multitask.formatted_end_date %></td>
              <td><%= options(multitask) %></td>
              <td><%= link_to "sub-tarefa", "", id: "sub-tarefa", class: "btn btn-primary", data: { toggle: "modal", target: "sub-task-modal" } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= render partial: "multi_tasks" %>
  </div>
</div>
